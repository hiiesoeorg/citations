<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Minimal Superscript</title>
    <id>http://www.zotero.org/styles/minimal-superscript</id>
    <author>
      <name>ChatGPT Custom</name>
    </author>
    <category citation-format="numeric"/>
  </info>

  <!-- Citation Number Formatting (Superscript) -->
  <layout vertical-align="sup">
    <text variable="citation-number"/>
  </layout>

  <!-- Bibliography Format -->
  <layout>
    <text variable="author"/>
    <text variable="title"/>
    <text variable="container-title"/>
    <text variable="issued"/>
    <text variable="volume"/>
    <text variable="page"/>
  </layout>
</style>
