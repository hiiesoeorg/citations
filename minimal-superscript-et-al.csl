<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Minimal Superscript with Et al</title>
    <id>http://www.zotero.org/styles/minimal-superscript-et-al</id>
    <link href="http://www.zotero.org/styles/minimal-superscript-et-al" rel="self"/>
    <author>
      <name>ChatGPT Custom</name>
    </author>
    <category citation-format="numeric"/>
    <category field="medicine"/>
    <updated>2025-04-16T00:00:00+00:00</updated>
  </info>

  <!-- Author formatting -->
  <names variable="author" et-al-min="2" et-al-use-first="1">
    <name form="short" initialize-with="" name-as-sort-order="first" delimiter=", " delimiter-precedes-last="never"/>
    <et-al term="et-al"/>
  </names>

  <!-- Journal Title formatting -->
  <text variable="container-title" form="short" strip-periods="true"/>

  <!-- Year formatting -->
  <date variable="issued">
    <date-part name="year"/>
  </date>

  <!-- Volume formatting -->
  <text variable="volume"/>

  <!-- Pages formatting -->
  <text variable="page"/>

  <!-- Citation number format (superscript) -->
  <layout vertical-align="sup">
    <text variable="citation-number"/>
  </layout>

  <!-- Bibliography layout -->
  <layout suffix=".">
    <text variable="author" suffix=". "/>
    <text variable="container-title" suffix=". "/>
    <text variable="issued" suffix=";"/>
    <text variable="volume" suffix=":"/>
    <text variable="page"/>
  </layout>
</style>
